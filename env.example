# ==============================================================================
#                            DeepSock 配置
# ==============================================================================
# --- API 密钥 ---
# Binance API 凭证
BINANCE_API_KEY=your_actual_binance_api_key_here
BINANCE_SECRET=your_actual_binance_secret_here
# LLM（大语言模型）API 凭证
# 这可以是 DeepSeek、Groq、Ollama 或任何 OpenAI 兼容的端点
LLM_API_KEY=your_actual_llm_api_key_here # 例如，DeepSeek API 密钥，Groq API 密钥
LLM_BASE_URL=https://api.deepseek.com
LLM_MODEL_NAME=deepseek-chat

# --- 交易配置 ---
# 要交易的符号，用逗号分隔
TRADE_SYMBOLS=BTC/USDT,ETH/USDT,SOL/USDT
# 每个符号对应的杠杆（用逗号分隔，顺序必须与 TRADE_SYMBOLS 一致）
TRADE_LEVERAGES=10,10,8
# 默认的K线时间框架用于分析
TIMEFRAME=15m
# 测试模式（True = 模拟信号，不进行真实订单交易）
TEST_MODE=False

# --- 风险管理配置 ---
# 单笔交易最多可承担的总资金百分比（例如，0.02 = 2%）
MAX_RISK_PER_TRADE=0.02
# 在停止交易前允许的最大总回撤（例如，0.1 = 10%）
MAX_TOTAL_RISK=0.1
# 在停止交易前允许的最大连续亏损交易次数
MAX_CONSECUTIVE_LOSSES=3
# 止损计算的乘数（根据上下文，例如 ATR 乘数）
STOP_LOSS_MULTIPLIER=1.5
# 止盈计算的乘数（根据上下文，例如 ATR 乘数）
TAKE_PROFIT_MULTIPLIER=2.0
# 同时开放仓位的最大数量
MAX_POSITIONS=5
# 账户余额警告级别（以 USDT 计）
BALANCE_WARNING_LEVEL=100
# 从峰值权益中允许的最大回撤（例如，0.2 = 20%）
MAX_DRAWDOWN=0.2

# --- RSS 新闻配置 ---
# 启用或禁用新闻功能（True/False）
ENABLE_NEWS=True
# RSS 订阅源 URL，用逗号分隔（仅在 ENABLE_NEWS=True 时使用）
RSS_FEED_URLS=https://api.theblockbeats.news/v2/rss/newsflash
# 检查新 RSS 新闻的时间间隔（分钟）（仅在 ENABLE_NEWS=True 时使用）
RSS_CHECK_INTERVAL_MINUTES=5

# ==============================================================================
#                      DeepSock 配置结束
# ==============================================================================